<div class="row">
    <div class="col-md-12">

        <h2>{{employee.firstName}} {{ employee.lastName}} - Employee â„–{{employee.empNumber}}</h2>
        <hr />

        <h3 style="margin-top: 35px; margin-bottom: 0;">Personal Information</h3>
        <hr style="margin-top: 5px;">
        <form name="updateEmployee" method="post" action="/employee/update">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input class="form-control" id="firstName" name="firstName" type="text"
                            value="{{ employee.firstName}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input class="form-control" id="lastName" name="lastName" type="text"
                            value="{{ employee.lastName}}" />
                    </div>
                </div>
            </div>


            <input class="form-control" id="empNumber" name="empNumber" type="hidden"
                value="{{ employee.empNumber }}" />


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ employee.email }}" />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" class="form-control" id="city" name="city" value="{{ employee.city }}" />
                    </div>
                </div>
            </div>


            <h3 style="margin-bottom: 0;">Contact Information</h3>
            <hr style="margin-top: 5px;">

            <div class="form-row">
                <div class="form-group col-md-4" style="padding-left: 0;">
                    <label for="status">Status</label>
                    <div class="form-row">
                        <div class="form-check col-md-6">
                            <input class="form-check-input" type="radio" name="status" id="status1" value="Full Time"
                                {{#eq employee.status "Full Time" }} checked {{/eq}}>
                            <label class="form-check-label" for="status" style="font-weight: 100;">Full Time
                            </label>
                        </div>
                        <div class="form-check col-md-6">
                            <input class="form-check-input" type="radio" name="status" id="status2" value="Part Time"
                                {{#eq employee.status "Part Time" }} checked {{/eq}}>
                            <label class="form-check-label" for="status" style="font-weight: 100;">Part Time
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-4" style="padding-left: 0;">
                    <label for="department">Department</label>
                    {{#if departments}}
                    <select class="form-control" name="department" id="department">
                        {{#each departments}}
                        <option value="{{depNumber}}" {{#if selected}} selected {{/if}}>
                            {{name}}
                        </option>
                        {{/each}}
                    </select>
                    {{else}}
                    <div>No Departments Available</div>
                    {{/if}}
                </div>
                <div class="form-group col-md-4">
                    <label for="hireDate">Hire Date</label>
                    <input type="text" class="form-control" id="hireDate" name="hireDate"
                        value="{{ employee.hireDate }}" disabled />
                </div>
            </div>

            <hr class="col-md-12">
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br><br><br>
        </form>
    </div>
</div>