<h2>Add Task</h2>

{{#if error}}
<div class="alert alert-danger"> <strong> {{error}} </strong></div>
{{/if}}

<form name="addTask" method="post" action="/tasks/add">

    <input class="form-control" id="owner" name="owner" type="hidden" value="{{ username }}" />
    
    <div class="form-row">
        <div class="form-group col-md-6" style="padding-left: 0;">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="form-group col-md-6" style="padding-left: 0;">
            <label for="dueDate">Due Date</label>
            <input type="date" class="form-control" id="dueDate" name="dueDate" required>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6" style="padding-left: 0;">
            <label for="project">Project</label>
            {{#if projects}}
            <select class="form-control" name="project" id="project">
                {{#each projects}}
                <option value="{{prjNumber}}">{{name}}</option>
                {{/each}}
            </select>
            {{else}}
            <div>No Projects Available</div>
            {{/if}}
        </div>
        <div class="form-group col-md-6" style="padding-left: 0;">
            <label for="priority">Priority</label>
            <div class="form-row">
                <div class="form-check col-md-4">
                    <input class="form-check-input" type="radio" name="priority" id="priority1" value="High">
                    <label class="form-check-label" for="priority" style="font-weight: 100;">High</label>
                </div>
                <div class="form-check col-md-4">
                    <input class="form-check-input" type="radio" name="priority" id="priority2" value="Medium">
                    <label class="form-check-label" for="priority" style="font-weight: 100;">Medium</label>
                </div>
                <div class="form-check col-md-4">
                    <input class="form-check-input" type="radio" name="priority" id="priority3" value="Low">
                    <label class="form-check-label" for="priority" style="font-weight: 100;">Low</label>
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6" style="padding-left: 0;">
            <label for="taskNumber">Task Number</label>
            <input type="number" class="form-control" id="taskNumber" name="taskNumber" required>
        </div>
    </div>

    <hr class="col-md-12">

    <div class="form-row col-md-12 text-right" style="padding-left: 0;">
        <button type="submit" class="btn btn-primary">Add Task</button>
    </div>

</form>