<div id="signup" class="flex column align-center">

    {{#if error}}
    <div class="flex align-center error mid-text"> {{error}}</div>
    {{/if}}

    <div class="card">
        <h2 class="big-text">Join Us!</h2>
        <form name="signup" method="post" action="/signup">
            <div>
                <p class="label small-text">Username</p>
                <input type="text" class="input-field mid-text" id="username" name="username" autocomplete="off" required>
            </div>
            <div>
                <p class="label small-text">Password</p>
                <input type="password" class="input-field mid-text" id="password" name="password" required>
            </div>
            <div>
                <p class="label small-text">Confirm Password</p>
                 <input type="password" class="input-field mid-text" id="confirm_password" name="confirm_password" required>
            </div>
            <button class="mid-text">Create my account</button>
            <p class="tiny-text center">Have an account?
                <a href="/login" class="tiny-text">Login</a>
            </p>
        </form>
    </div>

</div>