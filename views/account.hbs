<h2>Account Details</h2>
<hr style="margin-top: 5px;">

{{#if error}}
<div class="alert alert-danger"> <strong> {{error}} </strong> </div>
{{/if}}

<form name="update" method="post" action="/account">

    <div class="form-row">
        <div class="form-group col-md-12" style="padding-left: 0;">
            <input type="text" class="form-control" id="new_username" name="new_username" placeholder="New Username"
                value='{{user.username}}' required>
        </div>
    </div>

    <input type="hidden" class="form-control" id="username" name="username" placeholder="Username"
                value='{{user.username}}' >

    <hr >

    <div class="form-row col-md-12 text-right" style="padding-left: 0;">
        <button type="submit" class="btn btn-primary btn-success">Update Account</button>
        <a href="/account/delete" class="btn btn-primary btn-danger">Delete Account</a>
    </div>
</form>